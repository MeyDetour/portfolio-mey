{% extends 'base.html.twig' %}

{% block title %}Hello ProjectController!{% endblock %}

{% block body %}
    <a href="{{ path('new_quality') }}">Ajouter</a>
    <div class="d-flex flex-row my-5 ">
        {% for quality in qualities %}
            <div class="mx-2 w-25 border border-secoundary  d-flex flex-column align-items-center">
                <span class="fs-2">{{ quality.name }}</span>
                <p>{{ quality.description }}</p>
                <a href="{{ path('edit_quality',{'id':quality.id}) }}">Modifier</a>
                <a href="{{ path('remove_quality',{'id':quality.id}) }}">Supprimer</a>
                       </div>
            
        {% endfor %}

    </div>
{% endblock %}
